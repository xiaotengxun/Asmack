<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingTop="10dp" >

    <ImageView
        android:id="@+id/chat_right_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/chat_right_tv"
        android:layout_alignLeft="@+id/chat_right_tv"
        android:layout_alignRight="@+id/chat_right_tv"
        android:layout_alignTop="@+id/chat_right_tv"
        android:background="@drawable/icon_chat_right_bg" />

    <ImageView
        android:id="@+id/chat_left_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/chat_left_tv"
        android:layout_alignLeft="@+id/chat_left_tv"
        android:layout_alignRight="@+id/chat_left_tv"
        android:layout_alignTop="@+id/chat_left_tv"
        android:background="@drawable/icon_chat_left_bg" />

    <TextView
        android:id="@+id/chat_left_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:paddingBottom="5dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="5dp"
        android:text="chen"
        android:textColor="#000000"
        android:textSize="22sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/chat_right_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="50dp"
        android:paddingBottom="5dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="5dp"
        android:text="chen"
        android:textColor="#000000"
        android:textSize="22sp"
        android:visibility="visible" />

</RelativeLayout>